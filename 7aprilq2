// Global variable
let message = "This is a global message";

function showPriority() {
    // Local variable with the same name as the global variable
    let message = "This is a local message";

    // Logging the local variable
    console.log("Inside function (local):", message);
}

// Calling the function
showPriority();

// Logging the global variable outside the function
console.log("Outside function (global):", message);
